<Window x:Class="Salamandra.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salamandra.Views"
        mc:Ignorable="d"
        Title="Configurações" Height="450" Width="800">
    <TabControl Margin="8">
        <TabItem Header="Geral">
            <StackPanel Margin="8">
                <CheckBox Content="Confirmar ao fechar caso player esteja tocando"/>
            </StackPanel>
        </TabItem>

        <TabItem Header="Saídas">
            <StackPanel Margin="8">
                <TextBlock Text="Dispositivo de Saída"/>
                <ComboBox Margin="0 4 0 0"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
